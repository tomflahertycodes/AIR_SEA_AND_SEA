<img src="https://media.istockphoto.com/photos/blue-mesh-gradient-blurred-motion-abstract-background-picture-id1185747322?k=20&m=1185747322&s=612x612&w=0&h=Sy7s4nSTKEbDFY1HRAijhMJVRZd4_9rACOOjkkNa5bs=" class="bg-image shadow-2-strong" id="bg" alt="an image of a seaplane">

<div class="container d-flex justify-content-between mt-5 mb-5">
  <div class="row">
    <div class="col-6"></div>
      <%= cl_image_tag @seaplane.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <% @booking = Booking.new %>
    <div class="col-4" id='seaplane-booking-dates' data-unavailable="<%= @seaplane.unavailable_dates.to_json %>">
      <h4>Book this seaplane!</h4>
      <%# if current_user.id != @seaplane.user_id  %>
        <%= simple_form_for([@seaplane, @booking]) do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit "Book", class: "btn btn-primary" %>
          <% end %>
      <%# end %>
    </div>
  </div>
  <h1><%= @seaplane.name %></h1>

  <h3><%= @seaplane.description %></h3>

<p><em>Category: <%= @seaplane.category %></em></p>

  <p>You can find the plane at <%= @seaplane.location %></p>

<p>You can rent this plane for $<%= @seaplane.price %></p>

  <p>This plane can hold a maximum of <%= @seaplane.capacity %></p>


  <%= link_to "back to all planes", seaplanes_path %>
</div>
